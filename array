#include <iostream>
using namespace std;
  main(){

 // Set up parameters and seed generator

 int odds = 1000000;
 srand ( time (0) );

//Set array to 5000 elements
long lotteryArray[5000]= { };

//Seed array with our lottery numbers

for(int i=0;i<1;i++)
	{
		lotteryArray[i]=rand()% odds;
	}


//Inititalize the accumulator to zero
long sum=0;

for (int i=0; i <5000; i ++)
    sum += lotteryArray[i];
    
    cout << "The sum of the array is " << sum << endl;
    
    cout << "The average of the array is " << sum / 5 << endl;
 

}
